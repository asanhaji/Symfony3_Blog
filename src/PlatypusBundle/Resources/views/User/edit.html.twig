{% extends "@PlatypusBundle/Resources/views/Default/layout.html.twig" %}

{% block title %}
    Edit my account
{% endblock %}

{% block content %}

    {% for message in app.flashes('notice') %}
        <div class="flash-notice">
            {{ message }}
        </div>
    {% endfor %}
    <div class="form-style-1">
        {{ form_start(edit_form, {'attr':{'class':'form-signin'}})}}
         <h2 class="form-signin-heading">Edit my account</h2>
        <div class="form-group">
            {{ form_row(edit_form.username, {'attr':{'class':'form-control', 'value':user.getUsername()}}) }}
        </div>
        <div class="form-group">
            {{ form_row(edit_form.firstName, {'attr':{'class':'form-control', 'value':user.getFirstName()}}) }}
        </div>
        <div class="form-group">
            {{ form_row(edit_form.lastName, {'attr':{'class':'form-control', 'value':user.getLastName()}}) }}
        </div>
        <div class="form-group">
            {{ form_row(edit_form.email, {'attr':{'class':'form-control', 'value':user.getEmail()}}) }}
        </div>
        <div class="form-group">
            
            {{ form_label(edit_form.oldPassword, 'Password', {'label_attr': {'class': 'edit_label'}}) }}
            {{ form_row(edit_form.oldPassword, {'attr':{'class':'form-control'}} ) }}
        </div>
        <div class="form-group">
            {{ form_row(edit_form.newPassword, {'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(edit_form.newPasswordConfirm, {'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block" type="submit">Edit account</button>
            {{ form_end(edit_form) }}
            {{ form_start(delete_form) }}
            <button class="btn btn-lg btn-primary btn-block btn-danger" type="submit">Delete account</button>
            {{ form_end(delete_form) }}
        </div>
    </div>

{% endblock %}
