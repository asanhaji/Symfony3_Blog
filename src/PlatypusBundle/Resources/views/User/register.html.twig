{% extends "@PlatypusBundle/Resources/views/Default/layout.html.twig" %}
{% block title %}
    Register
{% endblock %}
{% block content %}
    <div class="form-style-1">
            {{ form_start(form, {'attr':{'class':'form-signin'}})}}
            <h2 class="form-signin-heading">Please register</h2>
            <div class="form-group">
                {{ form_row(form.firstName, {'attr':{'class':'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.lastName, {'attr':{'class':'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.username, {'attr':{'class':'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.email, {'attr':{'class':'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.plainPassword, {'attr':{'class':'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.passwordConfirm, {'attr':{'class':'form-control'}}) }}
            </div>

            <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
            {{ form_end(form) }}

    </div>
{% endblock %} 