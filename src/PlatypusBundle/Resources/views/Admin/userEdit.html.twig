{% extends "@PlatypusBundle/Resources/views/Default/layout.html.twig" %}

{% block title %}
    Edit my account
{% endblock %}

{% block content %}

    {% for message in app.flashes('notice') %}
        <div class="flash-notice">
            {{ message }}
        </div>
    {% endfor %}
    <div class="form-style-1">
        {{ form_start(edit_form, {'attr':{'class':'form-signin'}})}}
        <h2 class="form-signin-heading">Edit user</h2>
        <div class="form-group">
            {{ form_row(edit_form.firstName, {'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(edit_form.lastName, {'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(edit_form.username, {'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(edit_form.email, {'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(edit_form.roles) }}
        </div>
        <div class="form-group">
            {{ form_row(edit_form.plainPassword, {'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(edit_form.passwordConfirm, {'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block" type="submit">Edit</button>
            {{ form_end(edit_form) }}
            {{ form_start(delete_form) }}
            <button class="btn btn-lg btn-primary btn-block btn-danger" type="submit">Delete account</button>
            {{ form_end(delete_form) }}
        </div>
    </div>

    <a href="{{ path('platypus_userlist') }}">Back to the list</a>

{% endblock %}
