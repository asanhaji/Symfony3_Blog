{% extends "@PlatypusBundle/Resources/views/Default/layout.html.twig" %}

{% block title %}
    Edit post
{% endblock %}

{% block content %}  
    <h1>Post edit</h1>
    {% for message in app.flashes('notice') %}
        <div class="flash-notice">
            {{ message }}
        </div>
    {% endfor %}
    <div class="form-style-1">
        {{ form_start(edit_form) }}
        <div class="form-group">
            {{ form_row(edit_form.title, {'attr':{'class':'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(edit_form.content, {'attr':{'class':'form-control'}}) }}
        </div>

        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block" type="submit">Edit</button>
            {{ form_end(edit_form) }}
            {{ form_start(delete_form) }}
            <button class="btn btn-lg btn-primary btn-block btn-danger" type="submit">Delete post</button>
            {{ form_end(delete_form) }}
        </div>
    </div>
        
    <a href="{{ path('platypus_postlist') }}">Back to the list</a>

{% endblock %}
